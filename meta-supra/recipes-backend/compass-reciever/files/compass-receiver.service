[Unit]
Description=Compass Data Receiver Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /usr/share/compass-receiver/compass_server.py
Restart=always
RestartSec=3
User=weston
WorkingDirectory=/home/weston

[Install]
WantedBy=multi-user.target
